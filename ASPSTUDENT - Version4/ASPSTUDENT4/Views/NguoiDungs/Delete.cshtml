@model ASPSTUDENT4.Models.NguoiDung

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <!-- Sử dụng Layout -->
    ViewData["Title"] = "Xóa tài khoản";
}

<h1 class="text-center my-4">Xóa tài khoản</h1>
<hr />

<div class="alert alert-warning text-center" role="alert">
    <h4>Bạn có chắc chắn muốn xóa tài khoản này?</h4>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Thông tin chi tiết</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Họ tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HoTen)</dd>

            <dt class="col-sm-3 fw-bold">Tên đăng nhập</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TenDangNhap)</dd>

            <dt class="col-sm-3 fw-bold">Mật khẩu</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MatKhau)</dd>

            <dt class="col-sm-3 fw-bold">Loại người dùng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.LoaiNguoiDung)</dd>

            <dt class="col-sm-3 fw-bold">Ngày tạo</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-center gap-3">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaNguoiDung" />
        <button type="submit" class="btn btn-danger">Xóa</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</div>
