@model ASPSTUDENT4.Models.NguoiDung

@{
    Layout = null;
    ViewData["Title"] = "Create";
}

<h1>Tạo mới tài khoản</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HoTen" class="control-label"></label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenDangNhap " class="control-label"></label>
                <input asp-for="TenDangNhap " class="form-control" />
                <span asp-validation-for="TenDangNhap " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau " class="control-label"></label>
                <input asp-for="MatKhau " class="form-control" />
                <span asp-validation-for="MatKhau " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiNguoiDung " class="control-label"></label>
                <select asp-for="LoaiNguoiDung " class="form-control">
                    <option value="Cố vấn học tập">Cố vấn học tập</option>
                    <option value="Sinh viên">Sinh viên</option>
                </select>
                <span asp-validation-for="LoaiNguoiDung " class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NgayTao " class="control-label"></label>
                <input asp-for="NgayTao " class="form-control" />
                <span asp-validation-for="NgayTao " class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đăng ký" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
