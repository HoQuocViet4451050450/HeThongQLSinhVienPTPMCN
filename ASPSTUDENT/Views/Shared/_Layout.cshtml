@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPSTUDENT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASPSTUDENT.styles.css" asp-append-version="true" />
    <style>
        /* CSS tổng thể */
        html, body {
            height: 100%; /* Đảm bảo chiều cao chiếm toàn bộ màn hình */
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
        }

        /* Container chính bao gồm Sidebar và Main Content */
        .main-container {
            display: flex;
            flex: 1;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #333;
            color: #fff;
            padding: 20px;
            box-sizing: border-box;
        }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                .sidebar ul li {
                    margin: 15px 0;
                }

                    .sidebar ul li a {
                        color: #fff;
                        text-decoration: none;
                    }

                        .sidebar ul li a:hover {
                            text-decoration: underline;
                        }

        /* Main Content */
        .main-content {
            flex-grow: 1; /* Main content có thể kéo dài */
            padding: 20px;
            background-color: #f4f4f4;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASPSTUDENT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Thêm các liên kết điều hướng -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Container với Sidebar và Main Content -->
    <div class="main-container">
        <!-- Sidebar -->
        <nav class="sidebar">
            <ul>
                <li><a asp-controller="none" asp-action="Index">Thông tin cá nhân</a></li>
                <li><a asp-controller="NguoiDungs" asp-action="Index">Danh sách các người dùng</a></li>
                <li><a asp-controller="SinhViens" asp-action="Index">Quản lý sinh viên</a></li>
                <li><a asp-controller="none" asp-action="Index">Thống kê sinh viên</a></li>
                <li><a asp-controller="none" asp-action="Index">Trò chuyện</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
