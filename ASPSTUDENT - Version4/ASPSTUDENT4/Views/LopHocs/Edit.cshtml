@model ASPSTUDENT4.Models.LopHoc

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Sửa thông tin lớp học</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4 class="mb-3">Thông tin lớp học</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaLop" />

                <!-- Tên lớp -->
                <div class="form-group">
                    <label asp-for="TenLop" class="control-label"></label>
                    <input asp-for="TenLop" class="form-control" placeholder="Nhập tên lớp học" />
                    <span asp-validation-for="TenLop" class="text-danger"></span>
                </div>

                <!-- Nút Lưu -->
                <div class="form-group mt-3">
                    <input type="submit" value="Lưu" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <!-- Link quay lại danh sách -->
    <div class="mt-3 text-center">
        <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách lớp học</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
